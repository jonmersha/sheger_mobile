<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="149dp"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo_lasts" /><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wallet_merchant_payment"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintTextColor="#fff"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pinnumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/comm_pin_code"
                android:padding="10dp"
                app:hintTextColor="#fff"
                android:inputType="numberPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/merchant_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/merchant_id"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="7"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/invoice_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/invoice_number"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="10"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/paymount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/wallet_amount_to_pay"
                android:padding="10dp"
                android:maxLength="4"
                android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

</LinearLayout>
